# Environment Variables for LootVibe

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google Generative AI (for box image generation)
VITE_GOOGLE_API_KEY=your_google_api_key_here

# Backend Configuration
BACKEND_PORT=3001
VITE_BACKEND_URL=http://localhost:3001

# Clerk Authentication
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Google Cloud Vertex AI
GCP_PROJECT_ID=your_gcp_project_id
GCP_LOCATION=global

# Blockchain Master Seeds (KEEP THESE SECRET!)
BTC_MASTER_SEED="your bitcoin master seed phrase here"
ETH_MASTER_SEED="your ethereum master seed phrase here"

# Supabase Service Role Key (for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Email Service (optional for testing)
SENDGRID_API_KEY=
EMAIL_ENABLED=false

# Blockchain RPC (optional - will use public endpoints if not set)
INFURA_API_KEY=

# Crypto Testnet Mode
# Set to 'true' to use testnet for deposits/withdrawals
# When enabled:
#   - Bitcoin uses Testnet: https://blockchair.com/bitcoin/testnet
#   - Ethereum uses Sepolia Testnet: https://sepolia.etherscan.io
#   - Minimum withdrawal is $1 instead of $25
#   - Visual "TESTNET" badges appear in deposit/withdraw modals
VITE_CRYPTO_TESTNET=false
